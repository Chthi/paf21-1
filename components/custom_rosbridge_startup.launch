<launch>
  <include file="$(find carla_ros_bridge)/launch/carla_ros_bridge.launch">
    <arg name="host" value="$(env CARLA_SIM_HOST)" />
  </include>
  <include file="$(find carla_ego_vehicle)/launch/carla_example_ego_vehicle.launch">
    <arg name="host" value="$(env CARLA_SIM_HOST)" />
  </include>
  <include file="$(find carla_ackermann_control)/launch/carla_ackermann_control.launch" />
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find carla_ros_bridge)/config/carla_default_rviz.cfg.rviz">
    <param name="host" value="$(env CARLA_SIM_HOST)" />
  </node>
  <include file="$(find carla_ros_scenario_runner)/launch/carla_ros_scenario_runner.launch">
    <arg name="host" value="$(env CARLA_SIM_HOST)" />
    <arg name="scenario_runner_path" value="$(env SCENARIO_RUNNER_PATH)" />
  </include>
  <node pkg="rosservice" type="rosservice" name="rosservice"
      args="call /scenario_runner/execute_scenario \"{ 'scenario': { 'scenario_file': '$(env CARLA_SCENARIO_FILE)' } }\"">
</launch>
